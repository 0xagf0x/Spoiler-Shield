{
    "manifest_version": 3,
    "name": "Spoiler Shield",
    "version": "0.1",
    "description": "Block spoilers from Reddit, Twitter, and Facebook until you're ready.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "1": "icons/icon1.png"
        }
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.reddit.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.facebook.com/*",
        "*://*.google.com/*",
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.reddit.com/*",
                "*://*.twitter.com/*",
                "*://*.x.com/*",
                "*://*.facebook.com/*",
                "*://*.google.com/*",
                "*://*.youtube.com/*",
                "*://*.instagram.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}