{
  "manifest_version": 3,
  "name": "Spoiler Shield",
  "version": "1.1",
  "description": "Block text-based spoilers from Reddit, Twitter, Facebook, and other sites until you're ready.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon1.png",
      "32": "icons/icon1.png",
      "48": "icons/icon1.png",
      "128": "icons/icon1.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab", 
    "storage"
  ],
  "host_permissions": [
    "*://*.reddit.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.facebook.com/*",
    "*://*.google.com/*",
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.linkedin.com/*",
    "*://*.discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.facebook.com/*",
        "*://*.google.com/*",
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.linkedin.com/*",
        "*://*.discord.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}